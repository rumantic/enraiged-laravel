{
    "actions": {
        "back": {
            "label": "Back"
        },
        "clear": {
            "label": "Clear"
        },
        "reset": {
            "label": "Reset"
        },
        "submit": {
            "label": "Submit",
            "method": "emit"
        }
    },
    "fields": {
        "administration": {
            "heading": "Administrative Options",
            "secure": {
                "method": "roleIs",
                "role": "Administrator"
            },
            "type": "section",
            "fields": {
                "is_active": {
                    "default": true,
                    "label": "Active",
                    "type": "switch"
                },
                "role_id": {
                    "label": "Role",
                    "options": {
                        "source": "Enraiged\\Roles\\Models\\Role",
                        "type": "model"
                    },
                    "placeholder": "Optional",
                    "type": "select"
                }
            }
        },
        "personal": {
            "heading": "Personal Information",
            "type": "section",
            "fields": {
                "salut": {
                    "data": "profile.salut",
                    "label": "Salut",
                    "options": {
                        "source": "Enraiged\\Profiles\\Enums\\Saluts",
                        "type": "enum"
                    },
                    "placeholder": "Optional",
                    "type": "select"
                },
                "first_name": {
                    "data": "profile.first_name",
                    "disabled": {
                        "attribute": "user.disable_name_change"
                    },
                    "label": "First Name",
                    "placeholder": "Required",
                    "required": true
                },
                "last_name": {
                    "data": "profile.last_name",
                    "disabled": {
                        "attribute": "user.disable_name_change"
                    },
                    "label": "Last Name",
                    "placeholder": "Required",
                    "required": true
                },
                "alias": {
                    "data": "profile.alias",
                    "label": "Alias",
                    "placeholder": "Optional"
                },
                "birthdate": {
                    "data": "profile.birthdate",
                    "label": "Birthday",
                    "placeholder": "Optional"
                }
            }
        },
        "authentication": {
            "heading": "Login Details",
            "type": "section",
            "fields": {
                "email": {
                    "label": "Email",
                    "placeholder": "Required",
                    "required": true,
                    "value": null
                },
                "password": {
                    "label": "Password",
                    "placeholder": "Leave blank to keep password",
                    "type": "password",
                    "value": false
                },
                "password_confirmation": {
                    "label": "Confirm Password",
                    "type": "password",
                    "value": false
                },
                "username": {
                    "label": "Secondary Email",
                    "placeholder": "Optional"
                }
            }
        }
    }
}