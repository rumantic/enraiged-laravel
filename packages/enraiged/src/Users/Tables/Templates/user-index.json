{
    "id": "users.index",
    "class": "users-index shadow-1",
    "empty": "There are no users to display",
    "prefix": "users.",
    "table": "users",
    "uri": "users.index.data",
    "actions": {
        "create": {
            "class": "p-button-success",
            "icon": "pi pi-plus",
            "label": "User",
            "tooltip": "Create a new user"
        },
        "impersonate": {
            "class": "p-button-secondary",
            "icon": "pi pi-user",
            "secure": { "method": "roleIs", "role": "Administrator" },
            "tooltip": "Impersonate",
            "type": "row"
        },
        "show": {
            "class": "p-button-primary",
            "icon": "pi pi-eye",
            "tooltip": "Show user",
            "type": "row"
        },
        "edit": {
            "class": "p-button-warning",
            "icon": "pi pi-pencil",
            "tooltip": "Edit user",
            "type": "row"
        },
        "delete": {
            "class": "p-button-danger",
            "confirm": "Are you certain you wish to delete this user?",
            "icon": "pi pi-trash",
            "method": "delete",
            "secure": [
                { "method": "roleIs", "role": "Administrator" },
                { "method": "isNotDeleted" }
            ],
            "tooltip": "Delete user",
            "type": "row"
        },
        "restore": {
            "class": "p-button-success",
            "confirm": "Are you certain you wish to restore this user?",
            "icon": "pi pi-trash",
            "method": "patch",
            "secure": [
                { "method": "roleIs", "role": "Administrator" },
                { "method": "isDeleted" }
            ],
            "tooltip": "Restore user",
            "type": "row"
        }
    },
    "columns": {
        "avatar": {
            "class": "text-center",
            "custom": true,
            "exportable": false
        },
        "salut": {
            "label": "Salutation",
            "source": "profiles.salut"
        },
        "first_name": {
            "label": "First Name",
            "source": "profiles.first_name",
            "searchable": true,
            "sortable": true
        },
        "last_name": {
            "label": "Last Name",
            "searchable": true,
            "sortable": true,
            "source": "profiles.last_name"
        },
        "email": {
            "label": "Email",
            "searchable": true,
            "sortable": true
        },
        "alias": {
            "label": "Alias",
            "searchable": true,
            "sortable": true,
            "source": "profiles.alias"
        },
        "role": {
            "label": "Role",
            "searchable": true,
            "source": "roles.name"
        },
        "birthday": {
            "class": "text-right",
            "label": "Birthday",
            "sortable": true,
            "source": "profiles.birthdate"
        },
        "created": {
            "class": "text-right",
            "label": "Created",
            "sortable": true,
            "source": "users.created_at"
        },
        "is_active": {
            "class": "text-center",
            "custom": true,
            "label": "Active",
            "source": "users.is_active",
            "sortable": true
        }
    },
    "exportable": {
        "chunk": 100,
        "default": "XLSX",
        "options": ["CSV", "XLSX"],
        "uri": "/api/users/index/export"
    },
    "filters": {
        "role_id": {
            "default": null,
            "options": {
                "scope": "strictVisibility",
                "source": "Enraiged\\Roles\\Models\\Role",
                "type": "model"
            },
            "placeholder": "All Roles",
            "secure": {"method": "roleIs", "role": "Administrator"},
            "type": "select"
        },
        "deleted": {
            "options": {
                "values": [
                    {"id": "Deleted", "name": "Deleted", "scope": "whereDeleted"}
                ]
            },
            "placeholder": "Not Deleted",
            "secure": {"method": "roleIs", "role": "Administrator"},
            "type": "select"
        }
    },
    "pagination": {
        "options": [5, 10, 20, 50, 100, 200, 500],
        "page": 1,
        "rows": 10
    },
    "state": true
}