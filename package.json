{
    "private": true,
    "scripts": {
        "clean": "rm -rf ./public/css && rm -rf ./public/fonts && rm -rf ./public/images && rm -rf ./public/js",
        "dev": "npm run development",
        "development": "npm run clean && mix && npm run ssr:build",
        "fix:eslint": "eslint --ext .js,.vue resources/js/ --fix",
        "fix:prettier": "prettier --write --loglevel warn 'resources/js/**/*.vue'",
        "fix-code-style": "npm run fix:prettier && npm run fix:eslint",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "npm run clean && mix --production && npm run ssr:build",
        "ssr:build": "mix --production --mix-config=webpack.ssr.mix.js",
        "ssr:serve": "node public/js/ssr.js"
    },
    "dependencies": {
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@inertiajs/inertia": "^0.11.0",
        "@inertiajs/inertia-vue3": "^0.6.0",
        "@inertiajs/progress": "^0.2.7",
        "@inertiajs/server": "^0.1.0",
        "@popperjs/core": "^2.11.0",
        "@vue/server-renderer": "^3.2.27",
        "autoprefixer": "^10.4.0",
        "eslint": "^8.4.1",
        "eslint-plugin-vue": "^8.2.0",
        "laravel-mix": "^6.0.41",
        "lodash": "^4.17.21",
        "prettier": "^2.5.1",
        "primeflex": "^3.1.3",
        "primeicons": "^5.0.0",
        "primevue": "^3.12.2",
        "sass": "^1.49.9",
        "uuid": "^8.3.2",
        "vue": "^3.2.27",
        "vue-loader": "^16.2.0",
        "webpack-node-externals": "^3.0.0"
    },
    "devDependencies": {
        "resolve-url-loader": "^5.0.0",
        "sass-loader": "^12.1.0"
    }
}
